<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">

	<persistence-unit name="NomMPA">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider
    </provider>

		<!-- Class Definitions -->
<!-- 		<class>com.skilldistillery.jpanommpa.entities.Category</class>
 -->		<class>com.skilldistillery.jpanommpa.entities.GroceryList</class>
		<class>com.skilldistillery.jpanommpa.entities.Ingredient</class>
		<class>com.skilldistillery.jpanommpa.entities.MealPlan</class>
		<class>com.skilldistillery.jpanommpa.entities.MealPlanRecipe</class>
		<class>com.skilldistillery.jpanommpa.entities.Recipe</class>
		<class>com.skilldistillery.jpanommpa.entities.RecipeIngredient</class>
		<class>com.skilldistillery.jpanommpa.entities.RecipeReview</class>
		<class>com.skilldistillery.jpanommpa.entities.RecipeType</class>
		<class>com.skilldistillery.jpanommpa.entities.User</class>
		<class>com.skilldistillery.jpanommpa.entities.UserRecipe</class>

		<properties>
			<property name="javax.persistence.jdbc.url"
				value="jdbc:mysql://localhost:3306/nom?useSSL=false&amp;useLegacyDatetimeCode=false&amp;serverTimezone=MST" />
			<property name="javax.persistence.jdbc.user" value="marthastewart" />
			<property name="javax.persistence.jdbc.password"
				value="marthastewart" />
			<property name="javax.persistence.jdbc.driver"
				value="com.mysql.cj.jdbc.Driver" />

			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />

			<property name="hibernate.dialect"
				value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.connection.provider_class"
				value="org.hibernate.connection.C3P0ConnectionProvider" />

			<property name="hibernate.c3p0.max_size" value="5" />
			<property name="hibernate.c3p0.min_size" value="0" />
			<property name="hibernate.c3p0.acquire_increment" value="1" />
			<property name="hibernate.c3p0.idle_test_period" value="300" />
			<property name="hibernate.c3p0.max_statements" value="0" />
			<property name="hibernate.c3p0.timeout" value="60" />
		</properties>
	</persistence-unit>
</persistence>